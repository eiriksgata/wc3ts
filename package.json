{
  "name": "wc3ts-1.27a",
  "version": "1.0.0",
  "description": "TypeScript API for Warcraft III 1.27a custom maps.",
  "author": "Eiriksgata",
  "license": "MIT",
  "main": "./dist/index.lua",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:lua && npm run copy:types",
    "build:types": "tsc -p tsconfig.build.json",
    "build:lua": "tstl -p tsconfig.json",
    "copy:types": "xcopy /E /I /Y types dist\\types",
    "prepublishOnly": "npm run build",
    "test": "tsc --noEmit",
    "clean": "if exist dist rmdir /s /q dist"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-to-lua/language-extensions": "^1.19.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "lua-types": "^2.13.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-to-lua": "^1.32.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "warcraft3",
    "wc3",
    "typescript",
    "lua",
    "tstl",
    "game-development"
  ]
}
