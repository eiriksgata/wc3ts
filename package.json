{
  "name": "@eiriksgata/wc3ts",
  "version": "1.0.0",
  "description": "TypeScript API for Warcraft III custom maps.",
  "author": "Eiriksgata",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "./index.ts",
  "scripts": {
    "build": "npm run clean && npm run build:lua && npm run copy:types",
    "clean": "if exist dist rmdir /s /q dist",
    "build:lua": "tstl -p tsconfig.json",
    "copy:types": "xcopy /E /I /Y types dist\\types",
    "prepublish": "npm run build",
    "lint": "eslint . --ext .ts --quiet",
    "lint:fix": "eslint . --ext .ts --fix",
    "publish:github": "npm publish --registry=https://npm.pkg.github.com",
    "version:patch": "npm version patch && git push --follow-tags",
    "version:minor": "npm version minor && git push --follow-tags",
    "version:major": "npm version major && git push --follow-tags"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-to-lua/language-extensions": "^1.19.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "lua-types": "^2.13.1",
    "prettier": "^3.6.2",
    "typescript": "^5.0.4",
    "typescript-to-lua": "^1.32.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eiriksgata/wc3ts.git"
  },
  "bugs": {
    "url": "https://github.com/eiriksgata/wc3ts/issues"
  },
  "homepage": "https://github.com/eiriksgata/wc3ts#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "warcraft3",
    "wc3",
    "typescript",
    "lua",
    "tstl",
    "game-development"
  ],
  "types": "./dist/index.d.ts"
}
